{
  "extends": ["airbnb", "prettier"],
  "rules": {
    "react/jsx-filename-extension": 0,
    "react/prop-types": 0,
    "react/destructuring-assignment": 0,
    "react/no-access-state-in-setstate": 0,
    "react/jsx-props-no-spreading": 0,
    "no-useless-escape": 0,
    "no-console": 2,
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 120
      }
    ]
  },
  "settings": {
    "import/core-modules": [
      "@carbon/icons-react",
      "carbon-components-react",
      "classnames",
      "gatsby-link",
      "prop-types",
      "smooth-scroll",
      "slugify"
    ]
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "plugins": ["html", "prettier", "react-hooks"]
}
